<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banner_background"
    android:layout_margin="5dp"
    tools:context=".activities.LoginActivity">

    <ImageView
        android:id="@+id/img_login_background"
        android:scaleType="centerCrop"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_splash_title"
        android:text="@string/app_name"
        style="@style/Widget.MaterialComponents.TextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font_ct"
        android:textColor="@color/colorPaleWhite"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/tv_splash_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintCircleRadius="50dp"
        android:src="@mipmap/ic_launcher_e2_round"
        app:civ_border_color="@color/colorPaleWhite"
        app:civ_border_width="5dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="50dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_with_facebook"
        style="@style/Widget.MaterialComponents.Button"
        app:layout_constraintBottom_toTopOf="@id/btn_login_with_google"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorFacebook"
        android:layout_margin="20dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/colorPaleWhite"
        android:visibility="gone"
        app:cornerRadius="20dp"
        app:icon="@drawable/facebook"
        app:iconSize="38dp"
        app:iconTint="@null"
        app:rippleColor="@color/white_full"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_with_google"
        style="@style/Widget.MaterialComponents.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white_full"
        android:layout_margin="20dp"
        android:text="@string/btn_google_en"
        android:textAllCaps="false"
        android:textColor="@color/dark_grey"
        app:cornerRadius="20dp"
        app:icon="@drawable/google"
        app:iconSize="38dp"
        app:iconTint="@null"
        app:rippleColor="@color/white_full"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
